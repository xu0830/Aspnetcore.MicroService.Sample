{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:9001"
      }
    }
  },
  "ApplicationName": "auth-service",
  "AllowedHosts": "*",
  "Consul": {
    "Host": "localhost",
    "Port": 8500,
    "Discovery": {
      "ServiceName": "auth-service",
      "Hostname": "127.0.0.1",
      "Port": 9001,
      "InstanceId": "auth-service-127.0.0.1-9001",
      "Tags": [ "auth-service" ],
      "Heartbeat": { // consul心跳包  
        "Enabled": true,
        "TtlValue": 20
      },
      "Retry": {
        "Enabled": true
      }
    }
  },
  "ConnectionStrings": {
    "AppDbContext": "server=192.168.35.128;port=3306;database=userDB;user=root;password=123456"
  },
  "Jwt": {
    "Issuer": "https://yourdomain.com",
    "Audience": "https://yourdomain.com",
    "SecretKey": "your-256-bit-secret-key-at-least-32-characters-long",
    "AccessTokenExpiration": 3600, // 分钟
    "RefreshTokenExpiration": 7 // 天
  }
}
