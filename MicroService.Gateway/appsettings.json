{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:9000"
      }
    }
  },
  "AllowedHosts": "*",
  "Consul": {
    "Schema": "http",
    "Host": "localhost",
    "Port": 8500,
    "Discovery": {
      "Schema": "http",
      "ServiceName": "api-gateway",
      "Hostname": "127.0.0.1",
      "Port": 9000,
      "InstanceId": "api-gateway-127.0.0.1-9000",
      "Tags": [ "api-gateway" ],
      "HealthCheckUrl": "/health",
      "Retry": {
        "Enabled": true
      }
    }
  },
  "Jwt": {
    "Issuer": "https://www.example.com",
    "Audience": "https://www.example.com",
    "SecretKey": "aaaa-bbbb-cccc-dddd-eeee-ffff-gggg",
    "AccessTokenExpiration": 60, // 分钟
    "RefreshTokenExpiration": 7 // 天
  }
}
